<!DOCTYPE html>
<html>
<head>
	<title>Flixter</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<%= stylesheet_link_tag    "application", media: "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<link href="http://vjs.zencdn.net/5.0.2/video-js.css" rel="stylesheet">
	<script src="http://vjs.zencdn.net/5.0.2/video.js"></script>
</head>
<body>

	<div id="wrap">
		<nav class="navbar navbar-default" role="navigation">
			<div class="container-fluid">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="#"></a>
					<%= link_to 'Flixter', root_path, class: 'navbar-brand' %>
				</div>

				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav">
						<li>
							<%= link_to 'All Courses', courses_path %>
						</li>
						<li>
							<%= link_to 'Add Course', new_instructor_course_path %>
						</li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<% if user_signed_in? %>
						<li><%= link_to 'My Dashboard', dashboard_path %></li>
						<li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
						<% else %>
						<li><%= link_to 'Sign in', new_user_session_path %></li>
						<li><%= link_to 'Sign up', new_user_registration_path %></li>
						<% end %>
					</ul>
				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>

		<div class="container-fluid">
			<div class="row">
				<div class="col-xs-10 col-xs-offset-1">
					<br />
					<% if notice.present? %>
					<p class="alert alert-s"><%= notice %></p>
					<% end %>
					<% if alert.present? %>
					<p class="alert alert-danger"><%= alert %></p>
					<% end %>
				</div>
			</div>
		</div>

		<%= yield %>

	</div>

	<br class="clr" />

	<div id="footer">
		<div class="container">
			<div class="col-xs-4 col-sm-4 text-center">
				<div class="footer-header"><b>Teachers</b></div>
				<br />
				<%= link_to 'Add Course', new_instructor_course_path %>
				<br />
				<%= link_to 'Dashboard', dashboard_path %>
			</div>

			<div class="col-xs-4 col-sm-4 text-center">
				<div class="footer-header"><b>About</b></div>
				<br />
				<%= link_to 'Contact', contact_path %>
				<br />
				<%= link_to 'Privacy', privacy_path %>
				<br />
			</div>

			<div class="col-xs-4 col-sm-4 text-center social">
				<div class="footer-header"><b>Social</b></div>
				<br />
				<%= link_to 'https://github.com/LunaLikesArt' do %>
					<%= image_tag 'github.png', class: 'social-button' %>
				<% end %>
				<%= link_to '#' do %>
					<%= image_tag 'google.png', class: 'social-button' %>
				<% end %>
				<%= link_to '#' do %>
					<%= image_tag 'twitter.png', class: 'social-button' %>
				<!-- <% end %>
				<%= link_to '#' do %>
					<%= image_tag 'linkedin.png', class: 'social-button' %>
				<% end %> -->
			</div>
		</div>
	</div>
</body>
</html>
