<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1><%= @course.title %></h1>
  <br />
  <%= link_to 'Preview as student', course_path(@course), class: 'btn btn-warning btn-sm pull-right' %>

  <div class="text-left">
  	<%= link_to 'Teacher Settings, add new section', new_instructor_course_section_path(@course), class: 'btn btn-danger btn-sm' %>
  </div>

  <ul>
  	<% @course.sections.each do |section| %>
  		<li>
  			<%= section.title %>
  		</li>
  	<% end %>
  </ul>	

</div>