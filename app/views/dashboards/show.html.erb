<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Enrolled</h1>
  <br />

  <% current_user.enrolled_courses.each do |course| %>
  <h3 class="text-center">
    <%= course.title %>
  </h3>
  <br />
  <div class="text-center">
    <%= course.description %>
  </div>
  <br />
  <%= image_tag course.image, class: 'img-responsive' %>
  <br />
  <div class="row">
    <div class="col-xs-12 text-right">
      <%= link_to "Course Info", course_path(course), class: 'btn btn-sm btn-success' %>
    </div>
  </div>

  <hr class="col-xs-8 col-xs-offset-2">
  <br class="clr" / >
  <br />

  <% end %>

  <br />
  <h1>Teaching</h1>
  <br />
  <br />
  <% current_user.courses.each do |course| %>
  <h3 class="text-center">
    <%= link_to course.title, course_path(course) %>
  </h3>
  <div class="text-center">
    <%= course.description %>
  </div>
  <br />
  <%= image_tag course.image, class: 'img-responsive' %>

  <div class="row">
    <div class="col-xs-12 text-right">
      <%= link_to "Course Info", course_path(course), class: 'btn btn-sm btn-success' %>
    </div>
  </div>

  <hr class="col-xs-8 col-xs-offset-2">
  <br class="clr" / >
  <br />

  <% end %>

</div>
