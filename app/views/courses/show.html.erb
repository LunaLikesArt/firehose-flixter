<div class="booyah-box col-xs-10 col-xs-offset-1">
<br />


<div class="row">
  <div class="col-xs-12 col-offset-1 text-center">
    <h1><%= @course.title %></h1>
    <%= image_tag @course.image, class: 'img-responsive' %>
    <br />
  </div>
</div>



  <div class="row">
    <div class="col-xs-offset-1 text-center">
      <span class="label label-default">
        <%= number_to_currency @course.cost || 0 %>
      </span>
    </div>
  </div>

    <br />

  <div class="row">
    <div class="col-xs-offset-1 text-center">
    <%= @course.description %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <% @course.sections.each do |section| %>
        <div class="section">
          <%= section.title %>
          <% section.lessons.each do |lesson| %>
            <div class="lesson">
            <%= link_to lesson_path(lesson) do %>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            <% end %>
              </div>
            <br />
          <% end %>
        </div>
      <% end %>
    </div>
  </div>


  <div class="row">
    <div class="col-xs-12 text-right">
      <% if current_user && current_user == @course.user %>
      <br />
      <br />
      <%= link_to 'Course Settings', instructor_course_path(@course), class: 'btn btn-danger btn-sm' %>
      <% end %>
    </div>
  </div>

</div>