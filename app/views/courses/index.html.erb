<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1 class="text-center"> Learn something today</h1>
	<hr/>
	<br />

  <% @courses.each do |course| %>
    <h2 class="text-center"><%= link_to course.title, course_path(course) %></h2>
		<h6 class="text-center"><span class="label label-default"><%= number_to_currency course.cost %></span></h6>
		<br />
		<%= image_tag course.image, class: 'img-responsive' %>
		<br />
    <div class="col-sm-8 col-xs-12">
      <%= course.description %>
    </div>
    <br />
    <br />
    <div class="row">
	    <div class="col-xs-12 text-center">
	     <%= link_to 'More Details', course_path(course), class: 'more_details btn-success btn-sm pull-right' %>
			</div>
		</div>
		<br class='clear'/>
		<br />
		<br />
		<br />

		<% end %>

</div>
